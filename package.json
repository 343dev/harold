{
  "name": "@343dev/harold",
  "version": "2.0.2",
  "description": "Project bundle comparison tool",
  "license": "MIT",
  "author": "Andrey Warkentin (https://github.com/343dev)",
  "repository": {
    "type": "git",
    "url": "https://github.com/343dev/harold"
  },
  "bin": {
    "harold": "index.js"
  },
  "type": "module",
  "exports": "./index.js",
  "files": [
    "lib/",
    "tasks/",
    "index.js",
    "MIGRATION.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepublishOnly": "if [ -z \"$CI\" ]; then lawyer; fi",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-git-hooks": "npx simple-git-hooks"
  },
  "engines": {
    "node": ">=16.14"
  },
  "dependencies": {
    "cli-table3": "0.6.0",
    "commander": "7.2.0",
    "fast-glob": "3.2.5",
    "gzip-size": "6.0.0",
    "ora": "5.4.0",
    "pretty-bytes": "5.6.0",
    "signal-exit": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "lint-staged": "^14.0.1",
    "simple-git-hooks": "^2.9.0"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "eslintConfig": {
    "extends": "plugin:unicorn/recommended",
    "plugins": [
      "import"
    ],
    "rules": {
      "unicorn/no-array-reduce": 0
    }
  }
}
